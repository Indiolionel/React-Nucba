generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  firstname String
  orders    Order[]
}

model Order {
  id       Int      @id @default(autoincrement())
  shipping Boolean
  date     DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  buys     Buy[]
}

model Buy {
  id       Int    @id @default(autoincrement())
  category String
  imageSrc String
  name     String
  price    Int
  quantity Int
  order    Order  @relation(fields: [orderId], references: [id])
  orderId  Int
}
